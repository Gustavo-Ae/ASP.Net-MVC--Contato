@using ControleContatos.Models;
@model ContatoModel
@{
    ViewData["title"] = "Confirmação de apagar o contato";
}

<div class="text-center">

    <h3>Realmente deseja apagar o contato @Model.Nome ?</h3>

</div>

<a class="btn btn-primary d-block mb-1" role="button"  asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger d-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Exclusão</a>
